<%= form_for ([@group, @profile]), :method => :put, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :group_mission, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :group_mission, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Information", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text_block_body, :class => 'text_field' %>
    </div>
  </div>
   
    <div class="control-group">
    <%= f.label "Topics", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :text_block_content, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Update group info", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @group, :class => 'btn' %>
  </div>

  
<% end %>

