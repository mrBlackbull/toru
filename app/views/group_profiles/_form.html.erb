<%= form_for @group_profile, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :group_mission, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :group_mission, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :text_block_body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text_block_body, :class => 'text_field' %>
    </div>
  </div>
   
    <div class="control-group">
    <%= f.label :text_block_content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :text_block_content, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                @group, :class => 'btn' %>
  </div>

  
<% end %>

